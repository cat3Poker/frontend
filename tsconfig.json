{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"declaration": true,
    "outDir": "./dist",
    "rootDir": "src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"module": "ESNext",
		"moduleResolution": "Node"
	},
	"include": ["src"]
}
